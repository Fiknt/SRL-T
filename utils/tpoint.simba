TPoint related methods
*)

function TPoint.InRect(Rect: TRectangle): Boolean; 
begin
  Result := SRL.PointInTriangle(Self, Rect.Top, Rect.Btm, Rect.Right) or
            SRL.PointInTriangle(Self, Rect.Top, Rect.Left, Rect.Btm);
end;
